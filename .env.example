# Server Configuration
PORT=3000
NODE_ENV=development

# API Key для защиты мутирующих операций (POST, PUT, PATCH, DELETE)
# Используйте сложный, случайно сгенерированный ключ в продакшене
# Пример генерации: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=your-api-key-here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitbox
DB_USER=postgres
DB_PASSWORD=your-strong-password

# Redis Configuration (опционально, для кэширования)
# Если Redis не установлен, используется in-memory кэш
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-password
CACHE_TTL=600

# CORS Configuration (разрешенные домены для фронтенда)
CORS_ORIGIN=http://localhost:5173,https://fitbox.su